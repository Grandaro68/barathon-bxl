  border-bottom:3px solid rgba(0,245,212,.35);
  isolation:isolate;
}

/* calque animé en pseudo-élément */
.hero::before{
  content:"";
  position:absolute; inset:0;
  background:
    repeating-linear-gradient(
      -45deg,
      var(--stripe-dark) 0 22px,
      var(--stripe-mid) 22px 44px
    );
  /* voile turquoise + dégradé radial pour l'ambiance */
  box-shadow:inset 0 0 0 100vmax rgba(0,245,212,.06);
  background-size: 200% 200%;
  animation: stripesMove 18s linear infinite;
  z-index:-2;
}
.hero::after{
  content:"";
  position:absolute; inset:-10% -10% -60% -10%;
  background:radial-gradient(ellipse at top center, rgba(0,245,212,.18), transparent 60%);
  filter: blur(18px);
  z-index:-1;
}

@keyframes stripesMove{
  0%   { background-position: 0% 0% }
  100% { background-position: 200% 200% }
}

